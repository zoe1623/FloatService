<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600px"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/ll_drag_menu_root"
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:background="@drawable/drag_menu_bg"
        android:padding="10px">

        <View
            android:id="@+id/iv_drag_menu_left"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_gravity="center_vertical"
            android:background="@drawable/menu_close" />

        <TextView
            android:id="@+id/tv_drag_menu_text"
            android:layout_width="380px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="80px"
            android:layout_marginRight="80px"
            android:gravity="center_horizontal"
            android:text="确定退出当前应用吗？"
            android:textColor="@android:color/white"
            android:textSize="30px"
            android:visibility="gone" />

        <View
            android:id="@+id/iv_drag_menu_right"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/menu_confirm"
            android:visibility="gone" />
    </FrameLayout>
</FrameLayout>